{
  "template": "slipper-elasticsearch",
  "settings": {
    "analysis": {
      "analyzer": {
        "my_analyzer": {
          "type": "standard",
          "tokenizer": ["my_ngram_tokenizer", "my_standard_tokenizer"],
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "my_standard_tokenizer": {
          "type": "standard"
        },
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      },
      "filter": {
        "my_lowercase_filter": {
          "type": "lowercase"
        }
      }
    },
    "max_ngram_diff": "10"
  },
  "mappings": {
    "properties": {
      "description": {
        "type": "text",
        "analyzer": "my_analyzer"
      }
    }
  }
}
